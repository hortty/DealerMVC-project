@model TesteAPI.Models.ViewModel.CreateCliente

<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <img src="~/images/client.jpg" class="img-fluid" style="max-width: 21rem; border-radius: 30px; margin-top: -10rem; margin-bottom: 3rem;" />
    <form method="post" id="meuFormulario">
        <div class="card border-light p-4" style="border-radius: 30px;">
            <h3 class="mb-4 card-header">Cadastro de Clientes</h3>
            <div class="card-body">
                <div class="form-group">
                    <label class="card-text" for="NmCliente">Nome do Cliente</label>
                    <input type="text" class="form-control required" id="NmCliente" name="NmCliente" asp-for="NmCliente">
                    @Html.ValidationMessageFor(model => model.NmCliente, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mt-3">
                    <label class="card-text" for="Cidade">Cidade</label>
                    <input type="text" class="form-control required" id="Cidade" name="Cidade" asp-for="Cidade">
                    @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-outline-light mt-4 d-flex justify-content-center mx-auto">Cadastrar</button>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="camposVazios" tabindex="-1" role="dialog" aria-labelledby="camposVaziosLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="camposVaziosLabel">Campos vazios!</h5>
                <button type="button" class="btn btn-light close cancelar-modal" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Há campos vazios que precisam ser preenchidos!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light cancelar-modal" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="criadoComSucesso" tabindex="-1" role="dialog" aria-labelledby="criadoComSucessoLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="criadoComSucessoLabel">Campos vazios!</h5>
                <button type="button" class="btn btn-light close cancelar-modal" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Cliente criado com sucesso!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light cancelar-modal" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


