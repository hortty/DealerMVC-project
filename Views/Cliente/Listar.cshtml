@model IEnumerable<TesteAPI.Models.Domain.Cliente>

<!DOCTYPE html>
<html>
<head>
    <title>Lista de Clientes</title>
</head>
<body>
    <h1>Lista de Clientes</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cidade</th>
            <th>Ações</th>
        </tr>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.IdCliente</td>
                <td>@cliente.NmCliente</td>
                <td>@cliente.Cidade</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = cliente.IdCliente }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = cliente.IdCliente }, new { onclick = "return confirm('Tem certeza que deseja excluir este cliente?');" })
                </td>
            </tr>
        }
    </table>

    <p>@Html.ActionLink("Adicionar Cliente", "Create")</p>
</body>
</html>